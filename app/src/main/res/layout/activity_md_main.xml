<?xml version="1.0" encoding="utf-8"?>
<!--
DrawerLayout分为主视图抽屉视图
主视图：宽高匹配根布局是宽高，因为抽屉视图隐藏时，它代表整个UI。
抽屉视图：属性必须有android:layout_gravity="start"，表示抽屉从左边滑出。
          抽屉视图导航栏一般包含NavigationView, ListView, RecyclerView，因此该列表由adapter填充。

          NavigationView:
                            app:headerLayout="@layout/nav_header_main"  添加条目的menu。
                            app:headerLayout="@layout/nav_header_main"  添加条目的head布局。
          NavigationView.setNavigationItemSelectedListener(),监听条目点击事件。
-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar_main_layout"
            layout="@layout/app_bar_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_below="@+id/toolbar_main_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/popup_bottom"
                android:text="底部弹出菜单"
                android:layout_below="@+id/toolbar_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/translucent_bottom"
                android:text="状态栏设置"
                android:layout_below="@+id/toolbar_main_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:scrollbars="none"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_navi_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</android.support.v4.widget.DrawerLayout>
